{
    "name": "apionix-v2",
    "version": "0.1.0",
    "private": true,
    "description": "A desktop application built with Electron and Next.js",
    "author": "TETRAX",
    "main": "electron/main.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development concurrently \"npm run next:dev\" \"npm run electron:dev\"",
        "next:dev": "next dev renderer",
        "electron:dev": "wait-on http://localhost:3000 && electron .",
        "build": "cross-env NODE_ENV=production next build renderer && next export renderer",
        "start": "cross-env NODE_ENV=production electron .",
        "start:win": "set NODE_ENV=production && electron .",
        "package": "npm run build && cross-env NODE_ENV=production electron-builder build --publish=never",
        "postinstall": "npx npm-force-resolutions"
    },
    "resolutions": {
        "glob": "^10.3.10",
        "inflight": "npm:@isaacs/inflight@^1.0.7"
    },
    "build": {
        "appId": "com.tetrax.apionix",
        "productName": "APIONIX",
        "files": [
            "electron/**/*",
            "renderer/out/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "resources",
            "output": "dist"
        },
        "mac": {
            "category": "public.app.category.developer-tools",
            "target": ["dmg", "zip"]
        },
        "win": {
            "target": ["nsis", "portable"]
        },
        "linux": {
            "target": ["AppImage", "deb"],
            "category": "Development"
        },
        "publish": null
    },
    "dependencies": {
        "@hookform/resolvers": "^3.9.1",
        "@radix-ui/react-accordion": "1.2.2",
        "@radix-ui/react-alert-dialog": "1.1.4",
        "@radix-ui/react-aspect-ratio": "1.1.1",
        "@radix-ui/react-avatar": "1.1.2",
        "@radix-ui/react-checkbox": "1.1.3",
        "@radix-ui/react-collapsible": "1.1.2",
        "@radix-ui/react-context-menu": "2.2.4",
        "@radix-ui/react-dialog": "1.1.4",
        "@radix-ui/react-dropdown-menu": "2.1.4",
        "@radix-ui/react-hover-card": "1.1.4",
        "@radix-ui/react-label": "2.1.1",
        "@radix-ui/react-menubar": "1.1.4",
        "@radix-ui/react-navigation-menu": "1.2.3",
        "@radix-ui/react-popover": "1.1.4",
        "@radix-ui/react-progress": "1.1.1",
        "@radix-ui/react-radio-group": "1.2.2",
        "@radix-ui/react-scroll-area": "1.2.2",
        "@radix-ui/react-select": "2.1.4",
        "@radix-ui/react-separator": "1.1.1",
        "@radix-ui/react-slider": "1.2.2",
        "@radix-ui/react-slot": "1.1.1",
        "@radix-ui/react-switch": "1.1.2",
        "@radix-ui/react-tabs": "1.1.2",
        "@radix-ui/react-toast": "1.2.4",
        "@radix-ui/react-toggle": "1.1.1",
        "@radix-ui/react-toggle-group": "1.1.1",
        "@radix-ui/react-tooltip": "1.1.6",
        "@tailwindcss/postcss": "^4.1.8",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "cmdk": "1.0.4",
        "date-fns": "^3.6.0",
        "electron-store": "^8.1.0",
        "embla-carousel-react": "8.5.1",
        "input-otp": "1.4.1",
        "lucide-react": "^0.454.0",
        "next-themes": "latest",
        "path": "latest",
        "react-day-picker": "8.10.1",
        "react-hook-form": "^7.54.1",
        "react-resizable-panels": "^2.1.7",
        "recharts": "2.15.0",
        "sonner": "^1.7.1",
        "tailwind-merge": "^2.5.5",
        "tailwindcss-animate": "^1.0.7",
        "vaul": "^0.9.6",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/node": "^22",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^28.2.8",
        "electron-builder": "^24.13.3",
        "next": "15.2.4",
        "npm-force-resolutions": "^0.0.10",
        "postcss": "^8.5.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwindcss": "^3.4.17",
        "typescript": "^5",
        "wait-on": "^7.2.0"
    }
}